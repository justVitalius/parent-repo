{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Запрос workflow repcredentialcheck#stateName",
    "type": "object",
    "properties": {
        "fullName": {
            "description": "Имя идентифицированного ФЛ",
            "type": "string"
        },
        "corpClientName": { "type": "string" },
        "procDocType": { 
            "$ref": "#/definitions/procDocType"
        }
    },
    "required": ["fullName", "corpClientName", "procDocType"],
    "definitions": {
        "procDocType": { 
            "type": "array", 
            "items": {
                "type": "object",
                "properties": {
                    "id": { 
                        "type": "integer",
                        "minimum": 0,
                        "exclusiveMinimum": true 
                    },
                    "name": { "type": "string" }
                }
            },
            "required": ["id", "name"]
        }
    }
}
